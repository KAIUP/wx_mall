.first_tab .goods_item {
  display: flex;
  border-bottom: 1px solid #ddd;
  padding: 10rpx 0;
}
.first_tab .goods_item .goods_img {
  flex: 2;
  display: flex;
  align-items: center;
  justify-content: center;
}
.first_tab .goods_item .goods_img image {
  width: 70%;
}
.first_tab .goods_item .goods_info {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.first_tab .goods_item .goods_info .goods_name {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.first_tab .goods_item .goods_info .goods_price {
  font-size: 32rpx;
  color: var(--themeColor);
}
